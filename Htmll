    <script>
        // Tab navigation
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.getElementById(tabId).classList.add('active');
        }

        // Deposit form calculation
        document.getElementById('depositForm').addEventListener('input', function(e) {
            const amount = parseFloat(document.querySelector('#depositForm input[type="number"]').value) || 0;
            const duration = parseInt(document.querySelector('#depositForm input[name="duration"]:checked').value);
            
            let rate = 0;
            switch(duration) {
                case 1: rate = 4.5; break;
                case 3: rate = 5.5; break;
                case 6: rate = 6.5; break;
            }
            
            const interest = amount * (rate / 100) * (duration / 12);
            document.getElementById('estimatedInterest').textContent = 'Rp' + interest.toLocaleString('id-ID');
            document.getElementById('totalReturn').textContent = 'Rp' + (amount + interest).toLocaleString('id-ID');
            
            // Calculate maturity date
            const today = new Date();
            today.setMonth(today.getMonth() + duration);
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            document.getElementById('maturityDate').textContent = today.toLocaleDateString('id-ID', options);
        });

        // Initialize with default values
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.hash) {
                showTab(window.location.hash.substr(1));
            }
            
            // Trigger calculation on page load
            const event = new Event('input');
            document.getElementById('depositForm').dispatchEvent(event);
        });
    </script>
